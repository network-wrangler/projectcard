{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Project Card Schema",
    "required": [
        "project",
        "changes"
    ],
    "properties": {
        "project": {
            "type": "string"
        },
        "changes": {
            "type": "array",
            "items": {
                "$schema": "http://json-schema.org/draft-07/schema#",
                "type": "object",
                "required": [
                    "category",
                    "facility",
                    "properties"
                ],
                "additionalProperties": false,
                "properties": {
                    "category": {
                        "type": "string",
                        "pattern": "roadway property change"
                    },
                    "facility": {
                        "$schema": "http://json-schema.org/draft-07/schema",
                        "id": "roadway.facility",
                        "type": "object",
                        "additionalProperties": false,
                        "title": "Roadway Facility Selection",
                        "required": [
                            "links",
                            "A",
                            "B"
                        ],
                        "properties": {
                            "links": {
                                "$schema": "http://json-schema.org/draft-07/schema",
                                "id": "roadway.links",
                                "type": "array",
                                "title": "Road Name or Link ID",
                                "items": {
                                    "type": "object",
                                    "oneOf": [
                                        {
                                            "required": [
                                                "name"
                                            ]
                                        },
                                        {
                                            "required": [
                                                "osm_link_id"
                                            ]
                                        },
                                        {
                                            "required": [
                                                "model_link_id"
                                            ]
                                        }
                                    ]
                                }
                            },
                            "A": {
                                "$schema": "http://json-schema.org/draft-07/schema",
                                "id": "roadway.node",
                                "type": "object",
                                "additionalProperties": false,
                                "title": "Roadway network node",
                                "properties": {
                                    "osm_node_id": {
                                        "type": "string"
                                    },
                                    "model_node_id": {
                                        "type": [
                                            "number",
                                            "string"
                                        ]
                                    }
                                }
                            },
                            "B": {
                                "$schema": "http://json-schema.org/draft-07/schema",
                                "id": "roadway.node",
                                "type": "object",
                                "additionalProperties": false,
                                "title": "Roadway network node",
                                "properties": {
                                    "osm_node_id": {
                                        "type": "string"
                                    },
                                    "model_node_id": {
                                        "type": [
                                            "number",
                                            "string"
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "properties": {
                        "$schema": "http://json-schema.org/draft-07/schema",
                        "id": "roadway.properties",
                        "type": "array",
                        "items": {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "required": [
                                        "property",
                                        "set"
                                    ],
                                    "properties": {
                                        "property": {
                                            "type": "string"
                                        },
                                        "existing": {
                                            "type": [
                                                "number",
                                                "string"
                                            ]
                                        },
                                        "set": {
                                            "type": [
                                                "number",
                                                "string"
                                            ]
                                        }
                                    }
                                },
                                {
                                    "type": "object",
                                    "required": [
                                        "property",
                                        "existing",
                                        "change"
                                    ],
                                    "properties": {
                                        "property": {
                                            "type": "string"
                                        },
                                        "existing": {
                                            "type": "number"
                                        },
                                        "change": {
                                            "type": "number"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "notes": {
            "type": "string"
        }
    }
}