        "model_link_id": {
            "type": "array",
            "minItems": 1,
            "items":{"$ref": "../roadway_link.json#/$defs/model_link_id"}
        },
        "osm_link_id": {
            "type": "array",
            "minItems": 1,
            "items":{"$ref": "../roadway_link.json#/$defs/osm_link_id"}
        },
        "name": {
            "type": "array",
            "minItems": 1,
            "items":{"$ref": "../roadway_link.json#/$defs/name"}
        },
        "from": {
            "$ref": "select_node.json"
        },
        "to": {
            "$ref": "select_node.json"
        }
    }
}
