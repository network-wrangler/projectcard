{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "roadway.nodes.selection",
  "description": "requirements for describing multiple nodes of a project card (e.g. to delete).",
  "type": "array",
  "additionalProperties": false,
  "title": "Roadway network node",
  "items": {
    "type":"object",
    "oneOf": [
      {
        "type":"object",
        "required": ["osm_node_id"],
        "properties":{
          "osm_node_id":{"type":"array","minItems": 1,"items":{"type":"string"}}
        }
      },
      {
        "type":"object",
        "required": ["model_node_id"],
        "properties":{
          "model_node_id":{"type":"array","minItems": 1,"items":{"type":"integer"}}
        }
      }
    ]
  }
}
