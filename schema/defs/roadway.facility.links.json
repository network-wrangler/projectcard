{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "roadway.link.selection",
  "description": "requirements for describing links in the `facility` section of a project card.",
  "type": "array",
  "title": "Roadway selection properties",
  "items": {
    "type":"object",
    "oneOf": [
      {
        "type":"object",
        "required": ["name"],
        "properties":{
          "name":{"type":"array","minItems": 1,"items":{"type":"string"}}
        }
      },
      {
        "type":"object",
        "required": ["osm_link_id"],
        "properties":{
          "osm_link_id":{"type":"array","minItems": 1,"items":{"type":"string"}}
        }
      },
      {
        "type":"object",
        "required": ["model_link_id"],
        "properties":{
          "model_link_id":{"type":"array","minItems": 1,"items":{"type":"integer"}}
        }
      }
    ]
  }
}
