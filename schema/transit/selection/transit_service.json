{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
	"title": "Transit Service Facility Selection",
  "oneOf": [
      {"required": ["trip_id"]},
      {"required": ["route_id"]},
      {"required": ["short_name"]},
      {"required": ["long_name"]}
    ],
  "properties": {
    "trip_id":{"type":"array","minItems":1,"items":{"$ref":"../transit_trip.json#/$defs/trip_id"}},
    "route_id":{"type":"array","minItems":1,"items":{"$ref":"../transit_trip.json#/$defs/route_id"}},
    "short_name":{"type":"array","minItems":1,"items":{"$ref":"../transit_trip.json#/$defs/short_name"}},
    "long_name":{"type":"array","minItems":1,"items":{"$ref":"../transit_trip.json#/$defs/long_name"}},
    "time":{"type":"array","minItems":1,"items": {"$ref":"../../defs/timespan.json"}},
    "direction_id":{"$ref":"../transit_trip.json#/$defs/direction_id"}
  }
}
