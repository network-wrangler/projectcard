{
	"$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
	"required": [
		"facility",
		"property_changes"
	],
	"$defs": {
		"lanes.change-item":{
			"type":"object",
			"required":["property","set"],
			"properties":{
				"property":{"type":"string","value":"lanes"},
				"set" : {"type": ["number", "string"]}
			}
		},
		"ML_lanes.change-item":{
			"type":"object",
			"required":["property","set"],
			"properties":{
				"property":{"type":"string","value":"ML_lanes"},
				"set" : {"type": ["number", "string"]}

			}
		}
	},
	"additionalProperties" : false,
	"properties": {
		"facility": {
			"type": "object",
		 	"$ref": "../roadway/selection/select_segment.json"
   		},
		"property_changes": {
			"type":"array",
			"contains":{"allOf": [
				{"$ref":"#/$defs/lanes.change-item"},
				{"$ref":"#/$defs/ML_lanes.change-item"}
			]}
		}
	}
}
