{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs":{
        "set": {
            "type" : "object",
            "required": ["roadway_property","set"],
            "properties" : {
                "roadway_property" : {"type" : "string"},
                "existing" : {"type": ["number", "string"]},
                "set" : {"type": ["number", "string"]}
            }
        },
        "existing_change": {
            "type" : "object",
            "required": ["roadway_property","existing","change"],
            "properties" : {
                "roadway_property" : {"type" : "string"},
                "existing" : {"type" : "number"},
                "change" : {"type" : "number"}
            }
        }
    },
    "type": "object",
	"required": [
		"facility",
		"property_changes"
	],
	"additionalProperties" : false,
	"properties": {
	   "facility": {"$ref": "../roadway/selection/select_segment.json"},
	   "property_changes": {
		    "type": "array",
            "minItems":1,
		    "items" : {"$ref": "#/$defs/set"}
		}
	}
}
