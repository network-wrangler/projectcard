{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs":{
        "set": {
            "type" : "object",
            "required": ["set"],
            "properties" : {
                "existing" : {"type": ["number", "string"]},
                "set" : {"type": ["number", "string"]}
            }
        },
        "existing_change": {
            "type" : "object",
            "required": ["existing","change"],
            "properties" : {
                "existing" : {"type" : "number"},
                "change" : {"type" : "number"}
            }
        }
    },
    "type": "object",
	"required": [
		"facility",
		"property_changes"
	],
	"additionalProperties" : false,
	"properties": {
	   "facility": {"$ref": "../roadway/selection/select_segment.json"},
	   "property_changes": {
		    "type": "object",
            "minItems":1,
		    "oneOf": [
                {"patternProperties":{".*": {"$ref": "#/$defs/set"}}},
                {"patternProperties":{".*": {"$ref": "#/$defs/existing_change"}}}
            ]
	    }
    }
}
